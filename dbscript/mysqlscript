CREATE TABLE MASTERFILE_TABLE (MASTER_FILEID INT NOT NULL PRIMARY KEY,MASTER_FILENAME VARCHAR(225),MASTER_FILELOCATION VARCHAR

(100),CREATED_DATE DATETIME );
			       
CREATE TABLE BUSINESSRULE_TABLE (RULE_ID INT NOT NULL PRIMARY KEY,SET_OF_RULES VARCHAR(250),CREATED_DATE DATETIME, MASTER_FILEID INT NOT NULL 

REFERENCES MASTERFILE_TABLE(MASTER_FILEID) );



CREATE TABLE CHILDFILE_TABLE (FILEID INT NOT NULL PRIMARY KEY, FILENAME VARCHAR(225),STATUS VARCHAR(25),ISSUES_LIST VARCHAR(255),PROCESSED_TIME 

VARCHAR(20),
FILE_LOCATION VARCHAR(100),FILE_SIZE INT, CREATED_DATE DATETIME,
MASTER_FILEID INT NOT NULL REFERENCES MASTERFILE_TABLE(MASTER_FILEID),
RULE_ID INT NOT NULL REFERENCES BUSINESSRULE_TABLE(RULE_ID) );